<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView
    style="@style/Widget.MaterialComponents.CardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stateListAnimator="@animator/raise"
    tools:targetApi="lollipop"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    >

    <com.example.johnrobert.manongcustomer.ForegroundConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/implementation_imge"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/main_content_description_implementation_image"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/scrim"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="#8f37966F"
            app:layout_constraintBottom_toBottomOf="@+id/implementation_imge"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            style="@style/TextAppearance.Manong.TextView"
            android:id="@+id/implementation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal_8dp"
            android:layout_marginStart="@dimen/spacing_normal_8dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/scrim"
            app:layout_constraintLeft_toLeftOf="@+id/scrim"
            app:layout_constraintTop_toTopOf="@+id/scrim" />

    </com.example.johnrobert.manongcustomer.ForegroundConstraintLayout>

</android.support.design.card.MaterialCardView>

